{
  "name": "react-elegant-toasts",
  "version": "0.1.0",
  "description": "A highly customizable toast notification component for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsup src/index.ts --format cjs,esm --dts --minify --clean",
    "build:css": "cp src/styles.css dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "demo": "vite",
    "build:demo": "vite build",
    "prepare": "npm run build"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "alert",
    "popup",
    "message",
    "ui",
    "component",
    "typescript",
    "react-component",
    "notifications",
    "toast-notifications"
  ],
  "author": {
    "name": "Peter Ahlgren",
    "url": "https://github.com/ahlgren1234"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahlgren1234/react-elegant-toasts.git"
  },
  "bugs": {
    "url": "https://github.com/ahlgren1234/react-elegant-toasts/issues"
  },
  "homepage": "https://github.com/ahlgren1234/react-elegant-toasts#readme",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  }
}
